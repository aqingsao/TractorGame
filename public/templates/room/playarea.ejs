	<div class="defenders">
		<% if(!room.has('flipping')){%>
			<span>当前没有人在台上</span>
		<% }else{%>
		 	<span>台上: <span><%= room.banker().playerName()%></span></span>
		 	<span>亮主: <span><%= room.flipper().playerName()%></span></span>
		 	<span>
		 		<% room.get("flipping").get("jokers").each(function(card){%>
		 			<span class="card <%= card.get('suit').get('name')%>" id="<%= card.id%>"><%= card.get('rank').get('name')%></span>
		 		<% })%>
		 		<% room.get("flipping").get("trumps").each(function(card){%>
		 			<span class="card <%= card.get('suit').get('name')%>" id="<%= card.id%>"><%= card.get('rank').get('name')%></span>
		 		<% })%>
		 	</span>
		 <% }%>
	</div>
	<div class="attackers">
		<span>得分:<span>0</span></span>
	</div>
	<div class="currentStatus">
		<span class="description"><%= room.get('roomState').get('name')%></span> 
		<form class="start<% if(!room.canStart()){%> hidden<%}%>" action="/room/<%= room.get('id') %>/start" method="POST">
			<input type="submit" value="开始游戏"></input>
		</form>			
	</div>